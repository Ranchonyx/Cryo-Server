{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "outDir": "./dist/lib/",
    "removeComments": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "noImplicitAny": true
    /*
        "declaration": true,
        "declarationDir": "./dist/typings/"
    */
  },
  "include": ["src"]
}
